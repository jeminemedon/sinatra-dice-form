<h1>Dice Roll</h1>

<form action="/process_roll">
  <div>
    <label for="dice">Number of dice to roll?</label>
    <input id="dice" name="dice" type="number">
  </div>

  <div>
    <label for="sides">How many sides per die?</label>
    <input id="sides" name="sides" type="number">
  </div>

  <button>Roll!</button>
</form>
